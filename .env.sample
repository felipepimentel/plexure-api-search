# API Keys and Authentication
HUGGINGFACE_TOKEN=your_huggingface_token_here
OPENROUTER_API_KEY=your_key_here
PINECONE_API_KEY=your_pinecone_key_here

# Pinecone Configuration
PINECONE_INDEX_NAME=api-search
PINECONE_REGION=us-east-1
PINECONE_CLOUD=aws

# OpenRouter Configuration
OPENROUTER_MODEL=mistral/mistral-small
OPENROUTER_MAX_TOKENS=1024
OPENROUTER_TEMPERATURE=0.3

# Embedding Models
BI_ENCODER_MODEL=bert-base-uncased
BI_ENCODER_FALLBACK=distilbert-base-uncased
CROSS_ENCODER_MODEL=bert-base-uncased
MULTILINGUAL_MODEL=bert-base-multilingual-uncased

# Embedding Processing
NORMALIZE_EMBEDDINGS=true
POOLING_STRATEGY=mean
MAX_SEQ_LENGTH=512
VECTOR_DIMENSION=384

# RAG Configuration
RAG_ENABLED=true
RAG_CHUNK_SIZE=512
RAG_CHUNK_OVERLAP=50
RAG_TOP_K=3

# Hybrid Search Settings
HYBRID_SEARCH_ENABLED=true
BM25_WEIGHT=0.3
VECTOR_WEIGHT=0.7

# Advanced Search Features
ENABLE_SEMANTIC_CACHING=true
SEMANTIC_CACHE_TTL=86400
ENABLE_QUERY_EXPANSION=true
MAX_QUERY_EXPANSIONS=3

# Cache Settings
CACHE_DIR=~/.plexure-api-search/cache
CACHE_BACKEND=disk  # disk or redis
REDIS_URL=redis://localhost:6379/0
EMBEDDING_CACHE_TTL=86400
CACHE_TTL=3600
CACHE_COMPRESSION_ENABLED=true
CACHE_COMPRESSION_LEVEL=6

# Cache Prefetching Settings
CACHE_PREFETCH_ENABLED=true
CACHE_PREFETCH_THRESHOLD=5
CACHE_PREFETCH_INTERVAL=60

# Cache Warm-up Settings
CACHE_WARMUP_ENABLED=true
CACHE_WARMUP_TIMEOUT=300

# Hierarchical Cache Settings
MEMORY_CACHE_ENABLED=true
MEMORY_CACHE_TTL=300  # 5 minutes
MEMORY_CACHE_MAX_SIZE=1000  # Max items in memory

DISK_CACHE_ENABLED=true
DISK_CACHE_TTL=3600  # 1 hour
DISK_CACHE_MAX_SIZE=10000  # Max items on disk

REDIS_CACHE_ENABLED=false
REDIS_CACHE_TTL=86400  # 1 day
REDIS_CACHE_MAX_SIZE=100000  # Max items in Redis

# PCA Settings
PCA_ENABLED=true
PCA_COMPONENTS=128

# API Settings
API_DIR=assets/apis

# Monitoring and Metrics
ENABLE_TELEMETRY=true
METRICS_BACKEND=prometheus  # prometheus or statsd
LOG_LEVEL=INFO
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60

# Security
REQUIRE_API_KEY=false

# Redis settings
REDIS_ENABLED=false
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_CLUSTER_MODE=false
REDIS_MAX_RETRIES=3
REDIS_RETRY_DELAY=0.1

# Metrics settings
METRICS_ENABLED=true
METRICS_BACKEND=prometheus
METRICS_PORT=9090

# Search settings
SEARCH_TIMEOUT=5.0
SEARCH_MAX_RESULTS=100
SEARCH_MIN_SCORE=0.1
SEARCH_CACHE_ENABLED=true

# Embedding settings
EMBEDDING_MODEL=BAAI/bge-large-en-v1.5
EMBEDDING_BATCH_SIZE=32
EMBEDDING_CACHE_ENABLED=true

# Strategy weights
BM25_WEIGHT=0.3
VECTOR_WEIGHT=0.7
CROSS_ENCODER_WEIGHT=0.5

# Rate limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s