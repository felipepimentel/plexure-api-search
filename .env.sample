# API Keys and Authentication
HUGGINGFACE_TOKEN=your_huggingface_token

# Directory Settings
API_DIR=assets/apis
CACHE_DIR=.cache
HEALTH_DIR=.health
MODEL_DIR=.models
METRICS_DIR=.metrics

# Pinecone Settings
PINECONE_API_KEY=your_pinecone_api_key
PINECONE_ENVIRONMENT=gcp-starter
PINECONE_INDEX_NAME=plexure-api-search
PINECONE_CLOUD=gcp
PINECONE_REGION=us-central1

# Pinecone Pool Settings
PINECONE_POOL_MIN_SIZE=2
PINECONE_POOL_MAX_SIZE=10
PINECONE_POOL_MAX_IDLE_TIME=300
PINECONE_POOL_CLEANUP_INTERVAL=60

# Embedding Models
BI_ENCODER_MODEL=sentence-transformers/all-mpnet-base-v2
BI_ENCODER_FALLBACK=sentence-transformers/all-MiniLM-L6-v2
CROSS_ENCODER_MODEL=cross-encoder/stsb-roberta-base
MULTILINGUAL_MODEL=sentence-transformers/paraphrase-multilingual-mpnet-base-v2

# Vector Settings
VECTOR_DIMENSION=384
VECTOR_METRIC=cosine

# Search Settings
SEARCH_MAX_RESULTS=10
SEARCH_MIN_SCORE=0.5
SEARCH_TIMEOUT=10
SEARCH_CACHE_TTL=3600

# Cache Settings
CACHE_TTL=3600
EMBEDDING_CACHE_TTL=86400
CACHE_BACKEND=disk

# Monitoring Settings
ENABLE_TELEMETRY=true
METRICS_BACKEND=prometheus
LOG_LEVEL=INFO

# ZeroMQ Settings
ZMQ_PUB_PORT=5555
ZMQ_SUB_PORT=5556
ZMQ_PUB_ADDRESS=tcp://*
ZMQ_SUB_ADDRESS=tcp://localhost
ZMQ_TOPIC=events
ZMQ_HIGH_WATER_MARK=1000
ZMQ_RECONNECT_INTERVAL=1000
ZMQ_MAX_RETRIES=3

# Service Settings
SERVICE_NAME=plexure-api-search
SERVICE_VERSION=0.1.0
SERVICE_ENVIRONMENT=development

# Service Discovery Settings
DISCOVERY_HOST=localhost
DISCOVERY_PORT=5557
DISCOVERY_TTL=30
DISCOVERY_HEARTBEAT_INTERVAL=10
DISCOVERY_CLEANUP_INTERVAL=5

# Circuit Breaker Settings
CIRCUIT_FAILURE_THRESHOLD=5
CIRCUIT_RECOVERY_TIMEOUT=60
CIRCUIT_HALF_OPEN_TIMEOUT=30
CIRCUIT_CHECK_INTERVAL=1

# Service Registry Settings
REGISTRY_HOST=localhost
REGISTRY_PORT=5558
REGISTRY_TTL=30
REGISTRY_CLEANUP_INTERVAL=5
REGISTRY_MAX_SERVICES=100

# Batch Processing Settings
BATCH_SIZE=32
BATCH_MAX_WAIT=0.1
BATCH_QUEUE_SIZE=1000
BATCH_WORKERS=4

# Vector Operation Settings
VECTOR_OPS_BATCH_SIZE=1000
VECTOR_OPS_NUM_THREADS=4
VECTOR_OPS_QUANTIZATION_BITS=8
VECTOR_OPS_USE_GPU=false

# Performance Settings
ENABLE_CONNECTION_POOLING=true
ENABLE_BATCH_PROCESSING=true
ENABLE_VECTOR_QUANTIZATION=true
USE_NUMPY_OPTIMIZATION=true
USE_PARALLEL_PROCESSING=true
MAX_PARALLEL_REQUESTS=100
REQUEST_TIMEOUT=30
RATE_LIMIT=1000